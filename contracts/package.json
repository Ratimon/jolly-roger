{
  "name": "jolly-roger-contracts",
  "version": "0.0.0",
  "private": true,
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.1",
    "as-soon": "^0.0.4",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "hardhat": "^2.15.0",
    "hardhat-rocketh": "^0.5.25",
    "jolly-roger-common": "workspace:*",
    "ldenv": "^0.3.7",
    "rocketh": "^0.5.18",
    "rocketh-deploy-proxy": "^0.5.19",
    "rocketh-export": "^0.5.21",
    "rocketh-signer": "^0.5.18",
    "rocketh-verifier": "^0.5.18",
    "set-defaults": "^0.0.1",
    "solidity-coverage": "^0.8.2",
    "solidity-proxy": "^0.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "viem": "^1.0.7",
    "viem-chai-matchers": "^0.0.3"
  },
  "scripts": {
    "prepare": "pnpm compile",
    "local_node": "rm -Rf deployments/localhost && hardhat node",
    "compile": "hardhat compile",
    "watch_compile": "as-soon -w src pnpm compile",
    "deploy": "ldenv hardhat --network @@MODE deploy @@",
    "watch_deploy": "as-soon -w generated -w deploy pnpm run deploy",
    "test": "hardhat test",
    "export": "rocketh-export",
    "start": "zellij --layout zellij.kdl a $npm_package_name || zellij --layout zellij.kdl -s $npm_package_name",
    "stop": "zellij kill-session $npm_package_name"
  },
  "dependencies": {
    "@types/chai-as-promised": "^7.1.5"
  }
}
